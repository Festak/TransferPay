<?xml version="1.0" encoding="utf-8"?>
<edu.msstate.nsparc.mdcpsabusereporting.ui.customviews.tooltip.Tooltip
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tooltip_relative"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tooltip_height"
    android:background="@drawable/tooltip_background">

    <TextView
        android:gravity="center"
        android:id="@+id/tooltip_main_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tooltip_height_margin"
        android:layout_marginLeft="@dimen/tooltip_height_margin"
        android:layout_marginRight="@dimen/tooltip_height_margin"
        android:layout_marginTop="@dimen/tooltip_height_margin" />

    <View
        android:id="@+id/tooltip_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tooltip_main_text"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/action_link_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tooltip_line"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/tooltip_height_margin"
        android:layout_marginRight="@dimen/tooltip_height_margin"
        android:layout_marginTop="@dimen/tooltip_height_margin"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/tooltip_height_margin"
        android:textColor="@color/tooltipActionLink" />
</edu.msstate.nsparc.mdcpsabusereporting.ui.customviews.tooltip.Tooltip>
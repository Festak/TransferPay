<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.transfer.pay.models.BankAccountModel"/>

        <variable
            name="listener"
            type="android.view.View.OnClickListener"/>

        <variable
            name="longListener"
            type="android.view.View.OnClickListener"/>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:id="@+id/rl_card"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/bank_background_conrent"
            android:padding="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_cross"
                android:onClick="@{longListener.onClick}"
                android:src="@drawable/ic_cross"
                />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_send"
                android:onClick="@{listener.onClick}"
                android:src="@drawable/ic_send"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin">


                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="@dimen/items_inbetween"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_bank"/>

                <TextView
                    android:id="@+id/tv_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@{model.accountNo}"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/header_text"
                    tools:text="XXXX-XXXX-XXXX-1234"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/items_inbetween_small"
                        android:text="@string/bank_account_choose"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/xsmall_text"/>

                    <TextView
                        android:id="@+id/tv_validity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{model.chooseBank}"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/xsmall_text"
                        tools:text="Miami"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_member_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@{model.name}"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/medium_text"
                    tools:text="Miami Bank"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/items_inbetween_small"
                android:layout_marginRight="@dimen/items_inbetween_small"
                android:text="@{model.country}"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                tools:text="Belarus"
                />

        </RelativeLayout>

    </FrameLayout>

</layout>
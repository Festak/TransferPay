<resources>

    <!-- Base application theme. -->
    <style name="TransferPayTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary color themes -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Edit Text -->
        <item name="colorControlNormal">@color/colorDark</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorGrayLight</item>

        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
    </style>

    <!-- Window -->
    <style name="TransferPayTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ActionBar -->
    <style name="TransferPay.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TransferPay.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="TransferPay.White" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <!-- EditText -->
    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/inputText</item>
        <item name="android:textColorHighlight">@color/inputHighlight</item>
        <item name="android:textColorHint">@color/inputHint</item>
    </style>

    <!-- Text as Link -->
    <style name="TextLink">
        <item name="android:textSize">@dimen/text_link_size</item>
        <item name="android:layout_marginTop">@dimen/text_link_margin_top</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Not touchable edit text -->
    <style name="NoTouchableText">
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <!-- Spinner -->
    <style name="SpinnerLabel">
        <item name="android:textColor">@color/inputHint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="ButtonPrimary" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/textInvert</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- My Profile -->

    <style name="MyProfileTitle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:capitalize">words</item>
    </style>

    <style name="MyProfileLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:capitalize">characters</item>
        <item name="android:textColor">@color/textLight</item>
    </style>

    <style name="MyProfileValue">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="MyProfileHeader">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/line_background</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
    </style>

    <!-- Transaction overview -->

    <style name="UserData">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:capitalize">characters</item>
    </style>

    <style name="HintText" parent="UserData">
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="UserDataText" parent="UserData">
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <!-- New Beneficiary -->
    <style name="MainBeneficiaryText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textColor">@color/colorDark</item>
    </style>

    <style name="HintBeneficiaryText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>


</resources>
